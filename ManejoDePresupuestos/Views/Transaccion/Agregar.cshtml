@model TransaccionAgregarViewModel

@{
    ViewData["Title"] = "Agregar transacción";
}

<h2 class="mb-3">Nueva transacción</h2>

<form asp-action="Agregar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="FechaTransaccion" class="form-label"></label>
        <input asp-for="FechaTransaccion" class="form-control" />
        <span asp-validation-for="FechaTransaccion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Monto" class="form-label"></label>
        <input asp-for="Monto" type="number" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoOperacion" class="form-label"></label>
        <select class="form-select" asp-for="TipoOperacion" asp-items="@Html.GetEnumSelectList<TipoOperacion>()"></select>
        <span asp-validation-for="TipoOperacion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CuentaId" class="form-label"></label>
        <select class="form-select" asp-for="CuentaId" asp-items="@Model.Cuentas"></select>
        <span asp-validation-for="CuentaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label"></label>
        <select class="form-select" asp-for="CategoriaId" asp-items="@Model.Categorias"></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Nota" class="form-label"></label>
        <textarea asp-for="Nota" class="form-control"></textarea>
        <span asp-validation-for="Nota" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>



@section Scripts {

    <partial name="_ValidationScriptsPartial" />

    <script>
        const urlObtenerCategorias = '@Url.Action("CategoriasPorTipoOperacion")';
        
        $('#TipoOperacion').change(async function(){
            //seleccionar el valor
            const valorSeleccionado = $(this).val();

            const respuesta = await fetch(
                urlObtenerCategorias,
                {
                    method: 'POST',
                    body: valorSeleccionado,
                    headers:{
                        'Content-Type': 'application/json'
                    }
                });
                
            const json = await respuesta.json();
            console.log(json);

            const opciones = 
            json.map(categoria => `<option value=${categoria.value}>${categoria.text}</option>`);

            $('#CategoriaId').html(opciones);
        })
    </script>
}