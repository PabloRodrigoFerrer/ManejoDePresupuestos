@model TransaccionEditarViewModel

@{
    ViewData["Title"] = "Editar transacción";
}

<h2 class="mb-3">Editar transacción</h2>

<form asp-action="Editar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   
    <input asp-for="Id" hidden="hidden" />
    <input asp-for="MontoAnterior" hidden="hidden"/>
    <input asp-for="CuentaAnteriorId" hidden="hidden"/> 

    <div class="mb-3">
        <label asp-for="FechaTransaccion" class="form-label"></label>
        <input asp-for="FechaTransaccion" class="form-control" />
        <span asp-validation-for="FechaTransaccion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Monto" class="form-label"></label>
        <input asp-for="Monto" type="number" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoOperacionId" class="form-label"></label>
        <select class="form-select" asp-for="TipoOperacionId" asp-items="@Html.GetEnumSelectList<TipoOperacion>()"></select>
        <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CuentaId" class="form-label"></label>
        <select class="form-select" asp-for="CuentaId" asp-items="@Model.Cuentas"></select>
        <span asp-validation-for="CuentaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label"></label>
        <select class="form-select" asp-for="CategoriaId" asp-items="@Model.Categorias"></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Nota" class="form-label"></label>
        <textarea asp-for="Nota" class="form-control"></textarea>
        <span asp-validation-for="Nota" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
    <button asp-action="Borrar" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>


@section Scripts {

    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/ActualizarSelectDeCategorias.js" asp-append-version="true"></script>
    <script>
        const urlObtenerCategorias = '@Url.Action("CategoriasPorTipoOperacion")';

        $(function(){
            ActualizarSelectCategorias(urlObtenerCategorias);
        })

    </script>
}