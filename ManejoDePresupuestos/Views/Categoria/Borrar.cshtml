@model Categoria
@{
    ViewData["Title"] = "Borrar categoria"; 
}

<h3>¿Está segura/o que quiere eliminar la categoría: @Model.Nombre</h3>

<form asp-action="BorrarCategoria">
    <input type="number" hidden="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

